{
  "compilerOptions": {
     "experimentalDecorators": true,
     "target": "es2016",
     "module": "commonjs",
     "lib": ["es2016", "dom", "esnext"],
     "allowJs": true,
     "declaration": false,
     "sourceMap": true,
     "outDir": "./dist",
     "rootDir": "./src",
     "strict": true,
     "noImplicitAny": true,
     "strictNullChecks": true,
     "esModuleInterop": true,
     "emitDecoratorMetadata": true,
     "resolveJsonModule": true,
     "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}